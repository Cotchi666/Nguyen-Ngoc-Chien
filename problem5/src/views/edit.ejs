<%- include('./base/header.ejs') %>

<div class="container">
    <div class="alert bg-success mt-3">
        <h4 class="text-center">Update Your Record</h4>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="/update/<%= record.id %>" method="POST">
                <div class="field my-3">
                    <label for="" class="form-label">First Name</label>
                    <input type="text" class="form-control" name="first_name" value="<%= record.first_name %>"  placeholder="Enter your name">
                </div>
                <div class="field my-3">
                    <label for="" class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="last_name" value="<%= record.last_name %>" placeholder="Enter last name">
                </div>
                <div class="field my-3">
                    <label for="" class="form-label">email</label>
                    <input type="text" class="form-control" name="email" value="<%= record.email %>" placeholder="Enter your email">
                </div>
                <input type="submit" value="Update" class="btn btn-warning w-100">
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>


<%- include ('./base/footer.ejs') %>